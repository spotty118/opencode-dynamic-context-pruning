{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "description": "Dynamic Context Pruning plugin settings for Claude Code",

  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${pluginDir}/hooks/session-start.sh",
            "description": "Initialize Dynamic Context Pruning plugin"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${pluginDir}/hooks/pre-compact.sh",
            "description": "Analyze context before compaction and provide intelligent guidance"
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Skill",
      "Task",
      "Read",
      "Grep",
      "Glob",
      "Bash"
    ]
  },

  "experimental": {
    "contextOptimization": {
      "enabled": true,
      "strategies": [
        "deduplication",
        "supersedeWrites",
        "semantic"
      ],
      "preCompact": {
        "enabled": true,
        "useAgent": true,
        "showNotifications": true
      }
    }
  }
}
